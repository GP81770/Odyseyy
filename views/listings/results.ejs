<!-- views/results.ejs -->

<% layout("/layouts/boilerplate") %>
<h1>Search Results for "<%= query %>"</h1>

<% if (results.length > 0) { %>
<ul>
  <% results.forEach(item => { %>
  <li>
    <h2><%= item.title %></h2>
    <p><%= item.description %></p>
  </li>
  <% }) %>
</ul>
<% } else { %>
<p>No results found.</p>
<% } %>
